  "compilerOptions": {
    "outDir": "./dist",
    "composite": true,
    "incremental": true,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "jsx": "react-jsx", // 适用于 React 17+
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable", "ESNext"],
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}